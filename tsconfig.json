{
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "paths": {
      "@abi/*": ["packages/config/abi/*"],
      "@address/*": ["packages/config/address/*"],
      "@contract/*": ["packages/config/contract/*"],
      "@chains": ["packages/config/chains.ts"]
    },
    "skipLibCheck": true,
    "strict": true,
    "moduleResolution": "Node",
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true
  }
}
